{
  "compilerOptions": {
    "baseUrl": "src",
    "incremental": true,
    "target": "es2017",
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "paths": {
      "enums": ["enums"],
      "interfaces": ["interfaces"],
      "types": ["types"],
      "utils": ["utils"],
      "integrations": ["integrations"],
      "shared": ["shared"],
      "logger": ["logger"],
      "tests": ["tests"]
    },

    "strict": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**", "lib/**/*"],
  "compileOnSave": false,
  "paths": {
    "enums": ["enums"],
    "interfaces": ["interfaces"],
    "types": ["types"],
    "utils": ["utils"],
    "integrations": ["integrations"],
    "shared": ["shared"],
    "logger": ["logger"],
    "tests": ["tests"]
  }
}
