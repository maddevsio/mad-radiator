{
  "name": "@maddevs/mad-radiator",
  "version": "1.2.0",
  "description": "Script for collect data from analytics and send to slack(webhook) and telegram",
  "keywords": [
    "radiator",
    "analytics",
    "marketing",
    "analytics report"
  ],
  "homepage": "https://github.com/maddevsio/mad-radiator#readme",
  "bugs": {
    "url": "https://github.com/maddevsio/mad-radiator/issues"
  },
  "author": {
    "name": "Roman Chasovitin",
    "email": "chasovitin.r@maddevs.io"
  },
  "license": "ISC",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "mad-radiator": "lib/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/maddevsio/mad-radiator.git"
  },
  "engines": {
    "node": ">=12.14.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "fix": "yarn fix:prettier && yarn fix:lint",
    "fix:prettier": "prettier \"src/**/*.ts\" --write --config .prettierrc",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "jest --config jest.config.js --runInBand",
    "test:watch": "yarn test --watchAll",
    "test:ci": "CI=true yarn test",
    "example": "node example",
    "version": "standard-version --no-git-tag-version",
    "reset-hard": "git clean -df && git reset --hard && yarn",
    "prepare-release": "yarn reset-hard && yarn test && yarn version"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.1",
    "axios": "^0.21.1",
    "chalk": "^4.1.1",
    "googleapis": "^73.0.0",
    "node-emoji": "^1.10.0",
    "node-schedule": "^2.0.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node-emoji": "^1.8.1",
    "@types/node-schedule": "^1.3.1",
    "@types/node-telegram-bot-api": "^0.51.1",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.0.0",
    "tsc-alias": "^1.2.10",
    "typescript": "^4.0.2"
  },
  "standard-version": {}
}
